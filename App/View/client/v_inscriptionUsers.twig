{% extends "v_layout.twig" %}
{% block contenu %}
<form method="post" action="{{url('client.validInscriptionUsers')}}">
    <div class="row">
        <div class="large-4 columns">
            <label>Civilité
                <select>
                    <option value="Monsieur">Monsieur</option>
                    <option value="Madame">Madame</option>
                </select>
            </label>
        </div>
    </div>
    <div class="row">
        <div class="large-4 columns">
            <label>Nom: *
                <input type="text" placeholder="Nom" name="nom" value="{% if donnees.nom is defined %}{{ donnees.nom }}{% endif %}"/>
            </label>
            {% if erreurs.nom is defined %}
                <small class="error">{{erreurs.nom}}</small>
            {% endif %}
        </div>
        <div class="large-4 columns">
            <label>Prénom: *
                <input type="text" placeholder="Prénom" name="prenom" value="{% if donnees.prenom is defined %}{{ donnees.prenom }}{% endif %}" />
            </label>
            {% if erreurs.prenom is defined %}
                <small class="error">{{erreurs.prenom}}</small>
            {% endif %}
        </div>
        <div class="large-4 columns">
        </div>
        </div>
    <div class="row">
        <div class="large-6 columns">
            <label>Adresse Mail: *
                <input type="email" placeholder="adresse@mail.com" name="email" value="{% if donnees.email is defined %}{{ donnees.email }}{% endif %}"/>
                {% if erreurs.email is defined %}
                    <small class="error">{{erreurs.email}}</small>
                {% endif %}</label>
        </div>
            <div class="large-3 columns">
                <label>Mot de Passe: *
                    <input type="password" placeholder="mot de passe" name="mdp"/>
                    {% if erreurs.email is defined %}
                        <small class="error">{{erreurs.mdp}}</small>
                    {% endif %}
                </label>
            </div>
            <div class="large-3 columns">
                <label>Confirmer: *
                    <input type="password" placeholder="confirmer" name="mdp2"/>
                    {% if erreurs.email is defined %}
                        <small class="error">{{erreurs.mdp}}</small>
                    {% endif %}
                </label>
            </div>
    </div>
    <div class="row">
        <div class="large-6 columns">
            <label>Vos attentes:
                <textarea placeholder=""></textarea>
            </label>
        </div>
    </div>
    <input type="submit" value="Inscription" class="button success">
</form>
    <small>(*)Mention Obligatoire</small>
{% endblock %}